<mvc:View
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    controllerName="apnv.dev.controller.Main"
>
    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <f:ShellBar
                title="NEXT Gateway"
                secondTitle="Administration"
                showMenuButton="true"
                homeIcon="./images/logo_ui5.png"
                showCopilot="false"
                showNotifications="false"
                menuButtonPressed="onMenuButtonPress"
                showProductSwitcher="false"
            >
                <f:profile>
                    <Avatar initials="UI" />
                </f:profile>
            </f:ShellBar>
        </tnt:header>
        <tnt:sideContent>
            <core:Fragment
                fragmentName="apnv.dev.view.SideNavigation"
                type="XML"
            />
        </tnt:sideContent>
        <tnt:mainContents>
            <NavContainer
                id="pageContainer"
                initialPage="page2"
            >
                <pages>
                    <ScrollContainer
                        id="proxy"
                        horizontal="false"
                        vertical="true"
                        height="100%"
                    >
                        <mvc:XMLView
                            viewName="apnv.dev.view.Proxy"
                        />
                    </ScrollContainer>
                    <ScrollContainer
                        id="users"
                        horizontal="false"
                        vertical="true"
                        height="100%"
                    >
                        <mvc:XMLView
                            viewName="apnv.dev.view.Users"
                        />
                    </ScrollContainer>
                </pages>
            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
